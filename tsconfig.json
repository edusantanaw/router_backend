{
  "compilerOptions": {
    "target": "ES2023",
    "module": "commonjs",
    "rootDirs": ["src"],
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  }
}
