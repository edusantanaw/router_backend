generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id         String    @id
  name       String
  personType Int
  cpfCnpj    String    @unique
  dateOfBirth DateTime
  address    Json
  createdAt  DateTime  @default(now()) @db.Timestamp()
  active     Boolean   @default(true)
  Routers    Routers[]
  routersIP  String?
}

model Routers {
  IP        String     @id
  IPv6      String
  brand     Int
  model     String
  active    Boolean
  customers Customer[]
}
